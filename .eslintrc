{
  "extends": [
    "eslint-config-egg/typescript",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "object-shorthand": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-var-requires": "off",
    "array-bracket-spacing": "off",
    "arrow-parens": "off",
    "newline-per-chained-call": "off",
    "dot-notation": "off",
    "comma-dangle": "off",
    "jsdoc/require-param-description": "off",
    "jsdoc/check-tag-names": "off",
    "valid-jsdoc": "warn",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": 1,
        "FunctionDeclaration": {
          "parameters": "first"
        },
        "FunctionExpression": {
          "parameters": "first"
        },
        "CallExpression": {
          "arguments": "first"
        }
      }
    ],
    "linebreak-style": [
      0,
      "unix",
      "windows"
    ],
    "quotes": "off",
    "@typescript-eslint/indent": "off",
    "semi": [
      "error",
      "always"
    ],
    "strict": [
      "error",
      "global"
    ],
    "global-require": 0
  }
}